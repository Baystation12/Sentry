    <script src="css/components/Dimmer.js"></script>
    <script src="css/components/form.js"></script>
    <script src="css/components/transition.js"></script>
    <script src="css/components/dropdown.js"></script>
    <script src="css/components/modal.js"></script>
    <style type="text/css">
        body {
            background-color: #DDD;
        }
        
        .ui.menu .item img.logo {
            margin-right: 1.5em;
        }
        
        .main.container {
            margin-top: 3em;
        }
        
        .wireframe {
            margin-top: 2em;
        }
        
        .ui.footer.segment {
            margin: 5em 0em 0em;
            padding: 5em 0em;
        }
    </style>

</head>
<script>
    window.user = "{{ckey}}"
</script>

<body>

    <div class="ui fixed inverted menu">
        <div class="ui container">
            {{> menu}}
        </div>
    </div>
    <div class="ui main grid container stackable ">
        <div class="row">

            <div class="sixteen wide column">
                <div class="ui segments">
                    <div class="ui segment">
                        <h1 class="ui header">
                        <i class="user icon"></i>
                        <div class="content">
                            {{ckey}}
                        </div>
                          
                        </h1>
                    </div>
                    <div class="ui blue segment" id="statSegment">
                        <div class="ui five statistics small">
                            <div class="statistic blue" id="lastseen">
                                <div class="label">
                                    Last seen
                                </div>
                                <div class="value">
                                    22
                                </div>
                                <div class="label">
                                    Hours ago
                                </div>
                            </div>
                            <div class="statistic green" id="firstseen">
                                <div class="label">
                                    First seen
                                </div>
                                <div class="value">
                                    1
                                </div>
                                <div class="label">
                                    year played
                                </div>
                            </div>
                            <div class="statistic red" id="bans">
                                <div class="label" style="visibility:hidden">
                                    B
                                </div>
                                <div class="value">
                                    0
                                </div>
                                <div class="label">
                                    bans
                                </div>
                            </div>
                            <div class="statistic orange" id="whitelist">
                                <div class="label" style="visibility:hidden">
                                    B
                                </div>
                                <div class="value">
                                    0
                                </div>
                                <div class="label">
                                    whitelisted species
                                </div>
                            </div>
                            <div class="statistic orange" id="country">
                                <div class="label" style="visibility:hidden">
                                    B
                                </div>
                                <div class="value">
                                    SWE
                                </div>
                                <div class="label">
                                    Country
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ui segments" id="banSegment">
                    <div class="ui segment">
                        <h3 class="ui header">Bans</h3>
                    </div>
                    <div class="ui blue segment">
                        <table class="ui stackable selectable table padded" id="banTable">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Admin</th>
                                    <th>Comments</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <h4 id="archiveHeader" class="ui header center aligned ">
                        <i class="chevron down icon" id="archiveHeaderIcon"></i>Archive</h4>
                    </div>
                    <div class="ui segment" id="archiveTable">
                        <div>
                            <table class="ui stackable compact small table" id="archiveTableR">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Admin</th>
                                        <th>Comments</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="ui segments">
                    <div class="ui segment">
                        <h3 class="ui header">Whitelist</h3>
                    </div>
                    <div class="ui blue segment" id="whitelistSegment">
                        <table class="ui padded celled table" id="whiteTable">
                            <thead class="full-wdith">
                                <tr>
                                    <th colspan="2">Race</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            <tfoot class="full-width">
                                <tr>
                                    <th colspan="2">
                                        <div class="ui labeled action input">
                                            <input placeholder="Race or language..." type="text" id="raceInput">
                                            <div class="ui dropdown label inline" id="raceSelect">
                                                <i class="dropdown icon"></i>
                                                <div class="menu">
                                                    <div class="header">
                                                        <i class="user icon"></i> Races
                                                    </div>
                                                    <div class="divider"></div>
                                                    <div class="item">Tajara</div>
                                                    <div class="item">Skrell</div>
                                                    <div class="item">Unathi</div>
                                                    <div class="item">Vox</div>
                                                    <div class="item">Diona</div>
                                                    <div class="item">Machine</div>
                                                    <div class="item">Resomi</div>
                                                    <div class="header">
                                                        <i class="comment icon"></i> Languages
                                                    </div>
                                                    <div class="divider"></div>
                                                    <div class="item">Sol Common</div>
                                                    <div class="item">Siik'mass</div>
                                                    <div class="item">Skrellian</div>
                                                    <div class="item">Sinta'unathi</div>
                                                    <div class="item">Vox-pidgin</div>
                                                    <div class="item">Rootspeak</div>
                                                    <div class="item">Encoded Audio Language</div>
                                                    <div class="item">Schechi</div>
                                                </div>
                                            </div>
                                        </div>
                                        <button class="ui button primary right floated" id="raceAdd">Add</button>
                                        <div class="ui negative message" id="errMsg">
                                            <div class="header">
                                                Something went wrong..
                                            </div>
                                            <p></p>
                                        </div>
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
<script src="js/moment.js"></script>
<script src="js/player.js"></script>


</html>